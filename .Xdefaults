! -------------------------
! URxvt – Glassy Dark Theme
! -------------------------

*.boldFont:
*.geometry:130x45
*.internalBorder:20
*.letterSpace: -2

! URxvt*background:        [85]#0f1117
URxvt*foreground:        #e6e9ef
URxvt*cursorColor:       #89b4fa

URxvt.intensityStyles:	false
URxvt.background:       [70]#000000
URxvt.depth:		32
URxvt.font: 		xft:Hack Nerd Font Mono:size=15

! Transparency
URxvt*depth:             32
URxvt*transparent:       true
URxvt*shading:           10

! Border / internal padding
URxvt*internalBorder:    10
URxvt*borderColor:       #1e2230

! Font rendering (important for “glassy” feel)
URxvt*antialias:         true
URxvt*hinting:           true
URxvt*letterSpace:       -1

! Scrollbar off (clean look)
URxvt*scrollBar:         false
URxvt*scrollBar_right:   false


! -------------------------
! Colors
! -------------------------

! black
URxvt*color0:  #0b0d12
URxvt*color8:  #1e2230

! red (urgent)
URxvt*color1:  #f38ba8
URxvt*color9:  #f38ba8

! green
URxvt*color2:  #a6e3a1
URxvt*color10: #a6e3a1

! yellow
URxvt*color3:  #f9e2af
URxvt*color11: #f9e2af

! blue (accent)
URxvt*color4:  #89b4fa
URxvt*color12: #89b4fa

! magenta
URxvt*color5:  #cba6f7
URxvt*color13: #cba6f7

! cyan
URxvt*color6:  #94e2d5
URxvt*color14: #94e2d5

! white
URxvt*color7:  #e6e9ef
URxvt*color15: #ffffff

!! Extensions
URxvt.perl-ext-common:	default,matcher,resize-font,url-select,keyboard-select
URxvt.colorUL:		#4682B4
!! url-select
URxvt.keysym.M-o:	perl:url-select:select_next

URxvt.url-select.launcher: firefox
URxvt.url-select.underline: true
!! keyboard-select:
URxvt.keysym.M-Escape: perl:keyboard-select:activate
!! resize-font
URxvt.keysym.C-minus:     resize-font:smaller
URxvt.keysym.C-0:      resize-font:bigger
URxvt.keysym.C-equal:     resize-font:reset
!! Matcher
URxvt.url-launcher:	linkhandler
URxvt.matcher.button:	1

! Disable Ctrl-Alt-c & Ctrl-Alt-v bindings (optional)
URxvt.keysym.C-M-c:    builtin-string:
URxvt.keysym.C-M-v:    builtin-string:

! Bind Ctrl-Shift-c & Ctrl-Shift-v to copy and paste
! I dont know why, but I needed to use hex keysym values to get it to work
URxvt.keysym.C-S-0x43: eval:selection_to_clipboard
URxvt.keysym.C-S-0x56: eval:paste_clipboard

